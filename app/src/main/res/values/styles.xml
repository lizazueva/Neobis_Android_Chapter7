<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextTitleStyle">
        <item name="android:textColor">#212121</item>
        <item name="android:fontFamily">@font/m_plus_1p_medium</item>
    </style>

    <style name="TextAccount">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#292929</item>
        <item name="android:fontFamily">@font/m_plus_1p_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTextInputEditTextStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textColor">#767676</item>
    </style>
    <style name="MyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/black</item>
        <!-- Устанавливаем цвет полоски при вводе -->
        <item name="boxStrokeErrorColor">@android:color/transparent</item>
        <!-- Устанавливаем цвет курсора при вводе -->
        <item name="colorAccent">@color/black</item>
        <!-- Убрать текст hint при вводе -->
        <item name="hintEnabled">false</item>
        <item name="android:textColorSecondary">@color/red</item>
        <item name="errorTextColor">@color/red</item>

    </style>

    <style name="CustomSnackbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:background">@drawable/snackbar</item>-->
    </style>
</resources>